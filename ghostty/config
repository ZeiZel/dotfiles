# ============================================
# GHOSTTY - CATPPUCCIN MOCHA THEME
# ============================================

# Theme
theme = catppuccin-mocha

# Font
font-family = "JetBrainsMono Nerd Font"
font-size = 15
font-thicken = true
adjust-cell-height = 15%

# Window
window-decoration = true
window-padding-x = 10
window-padding-y = 8
window-padding-balance = true
window-theme = ghostty
window-save-state = always

# Background - transparent with blur
background-opacity = 0.85
background-blur-radius = 30
unfocused-split-opacity = 0.9

# Cursor
cursor-style = block
cursor-style-blink = false
shell-integration-features = cursor,sudo,title

# Mouse
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = false
copy-on-select = clipboard

# macOS specific
macos-option-as-alt = left
macos-titlebar-style = tabs
macos-window-shadow = true

# Scrollback
scrollback-limit = 100000

# Bell
visual-bell = true
audible-bell = false

# Links
link-url = true

# Keybindings - tmux-like splits
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+w=close_surface
keybind = super+enter=toggle_fullscreen

# Tab navigation
keybind = super+t=new_tab
keybind = super+shift+left_bracket=previous_tab
keybind = super+shift+right_bracket=next_tab

# Quick terminal (macOS)
# keybind = global:super+grave_accent=toggle_quick_terminal
# quick-terminal-position = top
# quick-terminal-screen = main
# quick-terminal-animation-duration = 0.15
